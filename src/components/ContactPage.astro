---
import PieS from "@/components/service_page/subComponents/PieS.astro"
---
  <div class="main">

 <div class="container">

        <h1>CONTACTAME</h1>

        <form id="contact-form">

            <div class="form-group">

                <label for="name">Nombre:</label>

                <input type="text" id="name" name="name" required>

            </div>

            <div class="form-group">

                <label for="email">Email:</label>

                <input type="email" id="email" name="email" required>

            </div>

            <div class="form-group">

                <label for="message">Mensaje:</label>

                <textarea id="message" name="message" required></textarea>

            </div>

            <button type="submit">Enviar</button>

        </form>
          <a href="mailto:nahueldev.software@gmail.com" id="send_email"></a>
    </div>
  </div>
  <PieS/>

<script>
  const $form = document.querySelector('#contact-form')
  const $button = document.querySelector('#send_email')

  $form.addEventListener('submit', handleSubmit)

  function handleSubmit(event:any){
    event.preventDefault()
    const form = new FormData(this)
    console.log(form)
    $button.setAttribute('href', `mailto:nahueldev.software@gmail.com?subject=Mensaje de nahueldev.online de ${form.get('name')}&body=email:${form.get('email')} message:${form.get('massage')}`)
    $button.click()
  }

</script>


<style>
  #send_email{
    display: hidden;
    opacity: 0;
  }
  .main{
    padding: 71px 0 0;
    height: calc(100vh - 147px);
  }

.container {
    max-width: 600px;
    margin: 50px auto;
    padding: 71px 20px;
    border-radius: 8px;
    box-shadow: 0 4px 20px rgba(0, 0, 0, 0.1);
}

h1 {
  font-size: 3rem;
    text-align: center;
    margin-bottom: 20px;
}

.form-group {
    margin-bottom: 15px;
}

label {
    display: block;
    margin-bottom: 5px;
}

input[type="text"],
input[type="email"],
textarea {
    width: 100%;
    padding: 10px;
    border: 1px solid black;
    border-radius: 4px;
}

button {
    width: 100%;
    padding: 10px;
    background-color: black;
    color: white;
    border: none;
    border-radius: 4px;
    cursor: pointer;
}

button:hover {
    background-color: gray;
}
    </style>
